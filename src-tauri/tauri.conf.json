{
    "$schema": "https://schema.tauri.app/config/2",
    "productName": "quibble",
    "version": "0.1.0",
    "identifier": "com.quibble.app",
    "build": {
        "beforeDevCommand": "bun run dev",
        "devUrl": "http://localhost:1420",
        "beforeBuildCommand": "bun run build",
        "frontendDist": "../dist"
    },
    "app": {
        "macOSPrivateApi": true,
        "windows": [
            {
                "windowEffects": {
                    "effects": ["underWindowBackground"]
                },
                "title": "Quibble",
                "width": 1000,
                "height": 600,
                "transparent": true,
                "center": true
            }
        ],
        "security": {
            "csp": null
        }
    },
    "bundle": {
        "active": true,
        "targets": "all",
        "icon": [
            "icons/32x32.png",
            "icons/128x128.png",
            "icons/128x128@2x.png",
            "icons/icon.icns",
            "icons/icon.ico"
        ]
    }
}
